#act {You sign up to play advanced knight's tour} {start}

#act {** You have completed mission 'Knight's Tournament (Part {1|2})' **} {w;n;u;mission return;mission ask;mission accept}
#act {** You have completed mission 'Knight's Tournament (Part {3|4})' **} {w;w;n;u;mission return;mission ask;mission accept}
#act {** You have completed mission 'Knight's Tournament (Part 5)' **} {w;w;w;n;u;mission return;mission ask;mission accept}
#act {** You have completed mission 'Knight's Tournament (Part 6)' **} {w;w;w;n;u;mission return;#class ktour kill}

#class {ktour} {close}

#class {ktour_init} {kill}
#class {ktour_init} {open}

#action {%d  {\*|-} {\*|-} {\*|-} {\*|-} {\*|-} {\*|-} $} {
	#var game_line %0;
	#replace game_line { } {;};
	#list line_entries create $game_line;

	#var star_detected 0;
	#loop 2 7 i {
		#if {"$line_entries[$i]" == "*"} {
			#math kx {$i - 1};
			#var star_detected 1;
		};
	};

	#if {$star_detected == 1} {
		#class ktour_init save;
		#class ktour_init clear;
		k6set $kx $line_entries[1]
	}
}

#action {%d  {\*|-} {\*|-} {\*|-} {\*|-} {\*|-} {\*|-} {\*|-} {\*|-}} {
        #var game_line %0;
        #replace game_line { } {;};
        #list line_entries create $game_line;

        #var star_detected 0;
        #loop 2 9 i {
                #if {"$line_entries[$i]" == "*"} {
                        #math kx {$i - 1};
                        #var star_detected 1;
                };
        };

        #if {$star_detected == 1} {
                #class ktour_init save;
                #class ktour_init clear;
                k8set $kx $line_entries[1]
        }
}

#class {ktour_init} {close}
