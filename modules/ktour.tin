#alias {k6set %1} {
	#list ktour6 find {%1} {start_posn};
	#if {$start_posn == 0} {sysreport Incorrect position};
	#else {
		#var kmove_num $start_posn;
		#var ktourpath $ktour6;
		#var kpathsize 36
	};
	#36 kmove
}

#alias {k8set %1} {
        #list ktour8 find {%1} {start_posn};
        #if {$start_posn == 0} {sysreport Incorrect position};
        #else {
                #var kmove_num $start_posn;
                #var ktourpath $ktour8;
                #var kpathsize 64;
        };
        #64 kmove
}

#alias kmove {
	#math kmove_num {$kmove_num + 1};
	#if {$kmove_num == $start_posn} {sysreport Tour complete!};
	#else {
		#if {$kmove_num>$kpathsize} {#math kmove_num {$kmove_num - $kpathsize}};
		ride $ktourpath[$kmove_num];
	};
}

#alias {sysreport}
{
	#echo %1
}

#action {^The game of the {advanced |}knight's tour has ended.} {#class ktour_init load}

#act {=M= Sally, the tournament organizer <?>.} {mission ask;mission accept}

#act {** You have accepted the mission 'Knight's Tournament (Part {1|2})' **.} {d;s;e;play}
#act {** You have accepted the mission 'Knight's Tournament (Part {3|4})' **.} {d;s;e;e;play}
#act {** You have accepted the mission 'Knight's Tournament (Part {5|6})' **.} {d;s;e;e;e;play}

#act {{1|2|4|6})' : %1/%2. **} {#if {%1 < %2} {play}}
